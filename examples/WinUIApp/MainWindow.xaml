<Window x:Class="WinUIApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dock="using:WinUI.Dock"
        mc:Ignorable="d"
        Title="WinUIApp">
    <Grid>
        <Grid.Resources>
            <Style x:Key="Space"
                   TargetType="Border">
                <Setter Property="BorderBrush"
                        Value="Red" />
                <Setter Property="BorderThickness"
                        Value="0" />
            </Style>
        </Grid.Resources>

        <dock:DockManager>
            <dock:DockManager.LeftSide>
                <dock:Document Title="左侧 1">
                    <Border Style="{StaticResource Space}">
                        <TextBlock Text="左侧 1" />
                    </Border>
                </dock:Document>
                <dock:Document Title="左侧 2">
                    <Border Style="{StaticResource Space}">
                        <TextBlock Text="左侧 2" />
                    </Border>
                </dock:Document>
                <dock:Document Title="左侧 3">
                    <Border Style="{StaticResource Space}">
                        <TextBlock Text="左侧 3" />
                    </Border>
                </dock:Document>
            </dock:DockManager.LeftSide>
            <dock:DockManager.TopSide>
                <dock:Document Title="顶部 1">
                    <Border Style="{StaticResource Space}">
                        <TextBlock Text="顶部 1" />
                    </Border>
                </dock:Document>
                <dock:Document Title="顶部 2">
                    <Border Style="{StaticResource Space}">
                        <TextBlock Text="顶部 2" />
                    </Border>
                </dock:Document>
                <dock:Document Title="顶部 3">
                    <Border Style="{StaticResource Space}">
                        <TextBlock Text="顶部 3" />
                    </Border>
                </dock:Document>
            </dock:DockManager.TopSide>
            <dock:DockManager.RightSide>
                <dock:Document Title="右侧 1">
                    <Border Style="{StaticResource Space}">
                        <TextBlock Text="右侧 1" />
                    </Border>
                </dock:Document>
                <dock:Document Title="右侧 2">
                    <Border Style="{StaticResource Space}">
                        <TextBlock Text="右侧 2" />
                    </Border>
                </dock:Document>
                <dock:Document Title="右侧 3">
                    <Border Style="{StaticResource Space}">
                        <TextBlock Text="右侧 3" />
                    </Border>
                </dock:Document>
            </dock:DockManager.RightSide>
            <dock:DockManager.BottomSide>
                <dock:Document Title="底部 1">
                    <Border Style="{StaticResource Space}">
                        <TextBlock Text="底部 1" />
                    </Border>
                </dock:Document>
                <dock:Document Title="底部 2">
                    <Border Style="{StaticResource Space}">
                        <TextBlock Text="底部 2" />
                    </Border>
                </dock:Document>
                <dock:Document Title="底部 3">
                    <Border Style="{StaticResource Space}">
                        <TextBlock Text="底部 3" />
                    </Border>
                </dock:Document>
            </dock:DockManager.BottomSide>

            <dock:LayoutPanel Orientation="Vertical">
                <dock:LayoutPanel DockHeight="2"
                                  Orientation="Horizontal">
                    <dock:DocumentGroup DockWidth="2">
                        <dock:Document Title="文档 1"
                                       CanPin="False"
                                       CanClose="False">
                            <Border Style="{StaticResource Space}">
                                <TextBlock Text="文档 1" />
                            </Border>
                        </dock:Document>
                        <dock:Document Title="文档 2"
                                       CanPin="False"
                                       CanClose="False">
                            <Border Style="{StaticResource Space}">
                                <TextBlock Text="文档 2" />
                            </Border>
                        </dock:Document>
                    </dock:DocumentGroup>

                    <dock:DocumentGroup DockWidth="1">
                        <dock:Document Title="解决方案资源管理器">
                            <Border Style="{StaticResource Space}">
                                <TextBlock Text="解决方案资源管理器" />
                            </Border>
                        </dock:Document>
                    </dock:DocumentGroup>
                </dock:LayoutPanel>

                <dock:LayoutPanel DockHeight="1"
                                  Orientation="Horizontal">
                    <dock:DocumentGroup TabPosition="Bottom"
                                        IsTabWidthBasedOnContent="True">
                        <dock:Document Title="侧边##错误列表">
                            <Border Style="{StaticResource Space}">
                                <TextBlock Text="错误列表" />
                            </Border>
                        </dock:Document>
                    </dock:DocumentGroup>
                    <dock:DocumentGroup TabPosition="Bottom"
                                        IsTabWidthBasedOnContent="True">
                        <dock:Document Title="侧边##输出">
                            <Border Style="{StaticResource Space}">
                                <TextBlock Text="输出" />
                            </Border>
                        </dock:Document>
                    </dock:DocumentGroup>
                </dock:LayoutPanel>
            </dock:LayoutPanel>
        </dock:DockManager>
    </Grid>
</Window>
