<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <StaticResource x:Key="ActiveBorderColor"
                            ResourceKey="SystemAccentColorLight1" />
            <SolidColorBrush x:Key="ActiveBorderColorBrush"
                             Color="{ThemeResource ActiveBorderColor}" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
            <StaticResource x:Key="ActiveBorderColor"
                            ResourceKey="SystemAccentColorDark1" />
            <SolidColorBrush x:Key="ActiveBorderColorBrush"
                             Color="{ThemeResource ActiveBorderColor}" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="HighContrast">
            <StaticResource x:Key="ActiveBorderColor"
                            ResourceKey="SystemColorWindowColor" />
            <SolidColorBrush x:Key="ActiveBorderColorBrush"
                             Color="{ThemeResource ActiveBorderColor}" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
