<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dock="using:WinUI.Dock">

    <Style TargetType="dock:DocumentGroup">
        <Setter Property="AllowDrop"
                Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="dock:DocumentGroup">
                    <Grid Background="Transparent">
                        <TabView VerticalAlignment="Stretch"
                                 TabItemsSource="{Binding Children, RelativeSource={RelativeSource TemplatedParent}}">
                            <TabView.TabItemTemplate>
                                <DataTemplate>
                                    <TabViewItem Header="{Binding ActualTitle}"
                                                 Content="{Binding}" />
                                </DataTemplate>
                            </TabView.TabItemTemplate>
                        </TabView>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
