<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
                    xmlns:dock="using:WinUI.Dock">

    <Style TargetType="dock:DocumentGroup">
        <Setter Property="AllowDrop"
                Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="dock:DocumentGroup">
                    <Border>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup>
                                <VisualState x:Name="Top">
                                    <VisualState.Setters>
                                        <Setter Target="Scale.ScaleY"
                                                Value="1" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Bottom">
                                    <VisualState.Setters>
                                        <Setter Target="Scale.ScaleY"
                                                Value="-1" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup>
                                <VisualState x:Name="TabWidthEqual">
                                    <VisualState.Setters>
                                        <Setter Target="PART_Root.TabWidthMode"
                                                Value="Equal" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="TabWidthSizeToContent">
                                    <VisualState.Setters>
                                        <Setter Target="PART_Root.TabWidthMode"
                                                Value="SizeToContent" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <controls:LayoutTransformControl>
                            <controls:LayoutTransformControl.Transform>
                                <ScaleTransform x:Name="Scale" />
                            </controls:LayoutTransformControl.Transform>

                            <TabView x:Name="PART_Root"
                                     CanReorderTabs="False"
                                     VerticalAlignment="Stretch"
                                     IsAddTabButtonVisible="False"
                                     TabItemsSource="{Binding Children, RelativeSource={RelativeSource TemplatedParent}}">
                                <TabView.TabItemTemplate>
                                    <DataTemplate>
                                        <TabViewItem Header="{Binding ActualTitle}" />
                                    </DataTemplate>
                                </TabView.TabItemTemplate>
                            </TabView>
                        </controls:LayoutTransformControl>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
