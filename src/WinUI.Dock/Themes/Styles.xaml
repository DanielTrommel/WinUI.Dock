<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="using:WinUI.Dock.Converters">

    <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

    <Style x:Key="TabViewStyle"
           TargetType="TabView">
        <Setter Property="BorderBrush" Value="{ThemeResource DefaultDockBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabView">
                    <Grid Background="{ThemeResource TabViewBackground}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="IsSingleView">
                                <VisualState x:Name="SingleView">
                                    <VisualState.Setters>
                                        <Setter Target="TabContainerGrid.Opacity" Value="0.0" />
                                        <Setter Target="TabContainerGrid.IsHitTestVisible" Value="False" />
                                        <Setter Target="TabContentPresenter.(Grid.Row)" Value="0" />
                                        <Setter Target="TabContentPresenter.(Grid.RowSpan)" Value="2" />
                                        <Setter Target="TabContentPresenter.BorderThickness" Value="1" />
                                        <Setter Target="TabContentPresenter.CornerRadius" Value="4" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="NormalView" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <Grid x:Name="TabContainerGrid"
                              Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition x:Name="LeftContentColumn"
                                                  Width="Auto" />
                                <ColumnDefinition x:Name="TabColumn"
                                                  Width="Auto" />
                                <ColumnDefinition x:Name="RightContentColumn"
                                                  Width="1*" />
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Width="4"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="0,0,0,1" />

                            <TabViewListView x:Name="TabListView"
                                             Grid.Column="1"
                                             HorizontalAlignment="Stretch"
                                             AllowDrop="False"
                                             BorderBrush="Red"
                                             BorderThickness="0"
                                             ItemTemplate="{TemplateBinding TabItemTemplate}"
                                             ItemTemplateSelector="{TemplateBinding TabItemTemplateSelector}"
                                             ItemsSource="{TemplateBinding TabItemsSource}">
                                <TabViewListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ItemsStackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </TabViewListView.ItemsPanel>

                                <TabViewListView.Template>
                                    <ControlTemplate TargetType="TabViewListView">
                                        <ItemsPresenter x:Name="TabsItemsPresenter" />
                                    </ControlTemplate>
                                </TabViewListView.Template>
                            </TabViewListView>

                            <Border Grid.Column="2"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="0,0,0,1" />
                        </Grid>

                        <ContentPresenter x:Name="TabContentPresenter"
                                          Grid.Row="1"
                                          Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="1,0,1,1"
                                          CornerRadius="0,0,4,4" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="TabViewItemStyle"
           TargetType="TabViewItem">
        <Setter Property="MinHeight" Value="{ThemeResource TabViewItemMinHeight}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabViewItem">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver" />
                                <VisualState x:Name="Pressed" />
                                <VisualState x:Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Target="BottomLine.Opacity" Value="0" />
                                        <Setter Target="Indicator.Opacity" Value="1" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="PointerOverSelected">
                                    <VisualState.Setters>
                                        <Setter Target="BottomLine.Opacity" Value="0" />
                                        <Setter Target="Indicator.Opacity" Value="1" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="PressedSelected">
                                    <VisualState.Setters>
                                        <Setter Target="BottomLine.Opacity" Value="0" />
                                        <Setter Target="Indicator.Opacity" Value="1" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <Border x:Name="BottomLine"
                                Grid.ColumnSpan="3"
                                Height="1"
                                VerticalAlignment="Bottom"
                                Background="{TemplateBinding BorderBrush}" />

                        <Border x:Name="TabSeparator"
                                Grid.Column="1"
                                Width="1"
                                Margin="{ThemeResource TabViewItemSeparatorMargin}"
                                HorizontalAlignment="Right"
                                Background="{ThemeResource TabViewItemSeparator}" />

                        <Grid Grid.Column="1"
                              Background="Transparent">
                            <Border x:Name="Indicator"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1,1,1,0"
                                    CornerRadius="4,4,0,0"
                                    Opacity="0" />

                            <ContentPresenter x:Name="ContentPresenter"
                                              Padding="8,2,8,2"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              ContentTemplate="{TemplateBinding HeaderTemplate}"
                                              ContentTransitions="{TemplateBinding ContentTransitions}"
                                              FontSize="{ThemeResource TabViewItemHeaderFontSize}"
                                              FontWeight="{TemplateBinding FontWeight}"
                                              Foreground="{ThemeResource TabViewItemHeaderForeground}" />
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PreviewStyle"
           TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource ActiveDockBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
        <Setter Property="BorderThickness" Value="4" />
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="Opacity" Value="0.4" />
    </Style>

    <Style x:Key="IconButtonStyle"
           TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                            Padding="{TemplateBinding Padding}"
                            Background="Transparent"
                            CornerRadius="4">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="Root.Background" Value="{ThemeResource SubtleFillColorSecondaryBrush}" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="Root.Background" Value="{ThemeResource SubtleFillColorTertiaryBrush}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <FontIcon FontSize="12"
                                  Glyph="{TemplateBinding Content}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="LeftBottomButtonStyle"
           TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Padding="0,6,0,0"
                            Background="Transparent">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="Content.Foreground" Value="{ThemeResource ActiveDockBrush}" />
                                        <Setter Target="Mark.Background" Value="{ThemeResource ActiveDockBrush}" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="Content.Foreground" Value="{ThemeResource ActiveDockBrush}" />
                                        <Setter Target="Mark.Background" Value="{ThemeResource ActiveDockBrush}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <StackPanel Orientation="Vertical">
                            <ContentPresenter x:Name="Content" />
                            <Border x:Name="Mark"
                                    Height="4"
                                    Margin="0,2,0,0"
                                    Background="{ThemeResource ControlStrokeColorDefaultBrush}"
                                    CornerRadius="2" />
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="TopRightButtonStyle"
           TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Padding="0,0,0,6"
                            Background="Transparent">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="Mark.Background" Value="{ThemeResource ActiveDockBrush}" />
                                        <Setter Target="Content.Foreground" Value="{ThemeResource ActiveDockBrush}" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="Mark.Background" Value="{ThemeResource ActiveDockBrush}" />
                                        <Setter Target="Content.Foreground" Value="{ThemeResource ActiveDockBrush}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <StackPanel Orientation="Vertical">
                            <Border x:Name="Mark"
                                    Height="4"
                                    Margin="0,0,0,2"
                                    Background="{ThemeResource ControlStrokeColorDefaultBrush}"
                                    CornerRadius="2" />
                            <ContentPresenter x:Name="Content" />
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
