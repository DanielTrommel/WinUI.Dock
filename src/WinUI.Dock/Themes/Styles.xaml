<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="using:WinUI.Dock.Converters">

    <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

    <Style x:Key="TabViewStyle"
           TargetType="TabView">
        <Setter Property="BorderBrush" Value="{ThemeResource DefaultDockBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabView">
                    <Grid Background="{ThemeResource TabViewBackground}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>

                        <Grid x:Name="TabContainerGrid"
                              Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="0,0,0,1" />

                            <TabViewListView x:Name="TabListView"
                                             Grid.Column="1"
                                             HorizontalAlignment="Left"
                                             AllowDrop="False"
                                             BorderThickness="0"
                                             ItemTemplate="{TemplateBinding TabItemTemplate}"
                                             ItemTemplateSelector="{TemplateBinding TabItemTemplateSelector}"
                                             ItemsSource="{TemplateBinding TabItemsSource}" />

                            <Border Grid.Column="2"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="0,0,0,1" />
                        </Grid>

                        <ContentPresenter x:Name="TabContentPresenter"
                                          Grid.Row="1"
                                          Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="1,0,1,1"
                                          CornerRadius="0,0,4,4" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="TabViewItemStyle"
           TargetType="TabViewItem">
        <Setter Property="BorderBrush" Value="{ThemeResource DefaultDockBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabViewItem">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver" />
                                <VisualState x:Name="Pressed" />
                                <VisualState x:Name="Selected" />
                                <VisualState x:Name="PointerOverSelected" />
                                <VisualState x:Name="PressedSelected" />
                            </VisualStateGroup>

                            <VisualStateGroup x:Name="IsActive">
                                <VisualState x:Name="Active" />
                                <VisualState x:Name="Inactive" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <Border x:Name="BottomLine"
                                Grid.ColumnSpan="3"
                                Height="0"
                                VerticalAlignment="Bottom"
                                Background="{TemplateBinding BorderBrush}"
                                Visibility="Collapsed" />

                        <Path x:Name="LeftRadius"
                              Width="4"
                              Height="4"
                              Margin="-4,0,0,0"
                              VerticalAlignment="Bottom"
                              Data="M4,0 C4,1.19,3.48,2.27,2.65,3 H0 C1.66,3,3,1.66,3,0 H4 Z"
                              Fill="{TemplateBinding BorderBrush}"
                              Visibility="Collapsed" />

                        <Path x:Name="RightRadius"
                              Grid.Column="2"
                              Width="4"
                              Height="4"
                              Margin="0,0,-4,0"
                              VerticalAlignment="Bottom"
                              Data="M0,0 C0,1.19469,0.523755,2.26706,1.35418,3 H4 C2.34315,3,1,1.65685,1,0 H0 Z"
                              Fill="{TemplateBinding BorderBrush}"
                              Visibility="Collapsed" />

                        <Border x:Name="TabSeparator"
                                Grid.Column="1"
                                Width="1"
                                Margin="{ThemeResource TabViewItemSeparatorMargin}"
                                HorizontalAlignment="Right"
                                Background="{ThemeResource TabViewItemSeparator}" />

                        <ContentPresenter x:Name="ContentPresenter"
                                          Grid.Column="1"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          ContentTemplate="{TemplateBinding HeaderTemplate}"
                                          ContentTransitions="{TemplateBinding ContentTransitions}"
                                          FontSize="{ThemeResource TabViewItemHeaderFontSize}"
                                          FontWeight="{TemplateBinding FontWeight}"
                                          Foreground="{ThemeResource TabViewItemHeaderForeground}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PreviewStyle"
           TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource ActiveDockBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
        <Setter Property="BorderThickness" Value="4" />
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="Opacity" Value="0.4" />
    </Style>

    <Style x:Key="IconButtonStyle"
           TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                            Padding="{TemplateBinding Padding}"
                            Background="Transparent"
                            CornerRadius="4">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="Root.Background" Value="{ThemeResource SubtleFillColorSecondaryBrush}" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="Root.Background" Value="{ThemeResource SubtleFillColorTertiaryBrush}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <FontIcon FontSize="12"
                                  Glyph="{TemplateBinding Content}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="LeftBottomButtonStyle"
           TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Padding="0,6,0,0"
                            Background="Transparent">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="Content.Foreground" Value="{ThemeResource ActiveDockBrush}" />
                                        <Setter Target="Mark.Background" Value="{ThemeResource ActiveDockBrush}" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="Content.Foreground" Value="{ThemeResource ActiveDockBrush}" />
                                        <Setter Target="Mark.Background" Value="{ThemeResource ActiveDockBrush}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <StackPanel Orientation="Vertical">
                            <ContentPresenter x:Name="Content" />
                            <Border x:Name="Mark"
                                    Height="4"
                                    Margin="0,2,0,0"
                                    Background="{ThemeResource ControlStrokeColorDefaultBrush}"
                                    CornerRadius="2" />
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="TopRightButtonStyle"
           TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Padding="0,0,0,6"
                            Background="Transparent">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="Mark.Background" Value="{ThemeResource ActiveDockBrush}" />
                                        <Setter Target="Content.Foreground" Value="{ThemeResource ActiveDockBrush}" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="Mark.Background" Value="{ThemeResource ActiveDockBrush}" />
                                        <Setter Target="Content.Foreground" Value="{ThemeResource ActiveDockBrush}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <StackPanel Orientation="Vertical">
                            <Border x:Name="Mark"
                                    Height="4"
                                    Margin="0,0,0,2"
                                    Background="{ThemeResource ControlStrokeColorDefaultBrush}"
                                    CornerRadius="2" />
                            <ContentPresenter x:Name="Content" />
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
