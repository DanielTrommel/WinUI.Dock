<UserControl x:Class="WinUI.Dock.Controls.DockTargetButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="36"
             Height="36"
             AllowDrop="True"
             Loaded="OnLoaded">

    <Border x:Name="Root"
            Padding="4"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource ControlCornerRadius}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Center">
                    <VisualState.Setters>
                        <Setter Target="Root.Child">
                            <Setter.Value>
                                <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                                        BorderThickness="1,3,1,1"
                                        CornerRadius="2" />
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="SplitLeft">
                    <VisualState.Setters>
                        <Setter Target="Root.Child">
                            <Setter.Value>
                                <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                                        BorderThickness="1,3,1,1"
                                        CornerRadius="2">
                                    <Path HorizontalAlignment="Center"
                                          Data="m 0,0 l 0,1"
                                          Stretch="Fill"
                                          Stroke="{ThemeResource AccentFillColorDefaultBrush}"
                                          StrokeDashArray="3,1"
                                          StrokeThickness="2" />
                                </Border>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="SplitTop">
                    <VisualState.Setters>
                        <Setter Target="Root.Child">
                            <Setter.Value>
                                <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                                        BorderThickness="1,3,1,1"
                                        CornerRadius="2">
                                    <Path VerticalAlignment="Center"
                                          Data="m 0,0 l 1,0"
                                          Stretch="Fill"
                                          Stroke="{ThemeResource AccentFillColorDefaultBrush}"
                                          StrokeDashArray="3,1"
                                          StrokeThickness="2" />
                                </Border>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="SplitRight">
                    <VisualState.Setters>
                        <Setter Target="Root.Child">
                            <Setter.Value>
                                <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                                        BorderThickness="1,3,1,1"
                                        CornerRadius="2">
                                    <Path HorizontalAlignment="Center"
                                          Data="m 0,0 l 0,1"
                                          Stretch="Fill"
                                          Stroke="{ThemeResource AccentFillColorDefaultBrush}"
                                          StrokeDashArray="3,1"
                                          StrokeThickness="2" />
                                </Border>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="SplitBottom">
                    <VisualState.Setters>
                        <Setter Target="Root.Child">
                            <Setter.Value>
                                <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                                        BorderThickness="1,3,1,1"
                                        CornerRadius="2">
                                    <Path VerticalAlignment="Center"
                                          Data="m 0,0 l 1,0"
                                          Stretch="Fill"
                                          Stroke="{ThemeResource AccentFillColorDefaultBrush}"
                                          StrokeDashArray="3,1"
                                          StrokeThickness="2" />
                                </Border>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="DockLeft">
                    <VisualState.Setters>
                        <Setter Target="Root.Child">
                            <Setter.Value>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0"
                                            Background="{ThemeResource ControlFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                                            BorderThickness="1,3,1,1"
                                            CornerRadius="2" />

                                    <FontIcon Grid.Column="1"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Center"
                                              FontSize="10"
                                              Glyph="&#xF08D;" />
                                </Grid>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="DockTop">
                    <VisualState.Setters>
                        <Setter Target="Root.Child">
                            <Setter.Value>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0"
                                            Background="{ThemeResource ControlFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                                            BorderThickness="1,3,1,1"
                                            CornerRadius="2" />

                                    <FontIcon Grid.Row="1"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Bottom"
                                              FontSize="10"
                                              Glyph="&#xF090;" />
                                </Grid>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="DockRight">
                    <VisualState.Setters>
                        <Setter Target="Root.Child">
                            <Setter.Value>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>

                                    <FontIcon Grid.Column="0"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Center"
                                              FontSize="10"
                                              Glyph="&#xF08F;" />

                                    <Border Grid.Column="1"
                                            Background="{ThemeResource ControlFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                                            BorderThickness="1,3,1,1"
                                            CornerRadius="2" />
                                </Grid>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="DockBottom">
                    <VisualState.Setters>
                        <Setter Target="Root.Child">
                            <Setter.Value>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                    </Grid.RowDefinitions>

                                    <FontIcon Grid.Row="0"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Bottom"
                                              FontSize="10"
                                              Glyph="&#xF08E;" />

                                    <Border Grid.Row="1"
                                            Background="{ThemeResource ControlFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                                            BorderThickness="1,3,1,1"
                                            CornerRadius="2" />
                                </Grid>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Border>

</UserControl>
