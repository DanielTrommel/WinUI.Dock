<UserControl x:Class="WinUI.Dock.Controls.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:CommunityToolkit.WinUI.Controls"
             xmlns:dock="using:WinUI.Dock"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="LeftBottomButtonStyle"
                   TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Padding="0,6,0,0"
                                    Background="Transparent">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal" />
                                        <VisualState x:Name="PointerOver">
                                            <VisualState.Setters>
                                                <Setter Target="Content.Foreground"
                                                        Value="{ThemeResource AccentFillColorDefaultBrush}" />
                                                <Setter Target="Mark.Background"
                                                        Value="{ThemeResource AccentFillColorDefaultBrush}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Pressed">
                                            <VisualState.Setters>
                                                <Setter Target="Content.Foreground"
                                                        Value="{ThemeResource AccentFillColorDefaultBrush}" />
                                                <Setter Target="Mark.Background"
                                                        Value="{ThemeResource AccentFillColorDefaultBrush}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <StackPanel Orientation="Vertical">
                                    <ContentPresenter x:Name="Content" />
                                    <Border x:Name="Mark"
                                            Height="4"
                                            Margin="0,2,0,0"
                                            CornerRadius="2"
                                            Background="{ThemeResource ControlStrokeColorDefaultBrush}" />
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="TopRightButtonStyle"
                   TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Padding="0,0,0,6"
                                    Background="Transparent">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal" />
                                        <VisualState x:Name="PointerOver">
                                            <VisualState.Setters>
                                                <Setter Target="Mark.Background"
                                                        Value="{ThemeResource AccentFillColorDefaultBrush}" />
                                                <Setter Target="Content.Foreground"
                                                        Value="{ThemeResource AccentFillColorDefaultBrush}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Pressed">
                                            <VisualState.Setters>
                                                <Setter Target="Mark.Background"
                                                        Value="{ThemeResource AccentFillColorDefaultBrush}" />
                                                <Setter Target="Content.Foreground"
                                                        Value="{ThemeResource AccentFillColorDefaultBrush}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <StackPanel Orientation="Vertical">
                                    <Border x:Name="Mark"
                                            Height="4"
                                            Margin="0,0,0,2"
                                            CornerRadius="2"
                                            Background="{ThemeResource ControlStrokeColorDefaultBrush}" />
                                    <ContentPresenter x:Name="Content" />
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <DataTemplate x:Key="LeftBottomTemplate"
                          x:DataType="dock:Document">
                <Button Style="{StaticResource LeftBottomButtonStyle}"
                        Content="{Binding ActualTitle}"
                        Click="Document_Click" />
            </DataTemplate>

            <DataTemplate x:Key="TopRightTemplate"
                          x:DataType="dock:Document">
                <Button Style="{StaticResource TopRightButtonStyle}"
                        Content="{Binding ActualTitle}"
                        Click="Document_Click" />
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <controls:LayoutTransformControl>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Left">
                    <VisualState.Setters>
                        <Setter Target="Rotate.Angle"
                                Value="90" />
                        <Setter Target="Items.ItemTemplate"
                                Value="{StaticResource LeftBottomTemplate}" />
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="Top">
                    <VisualState.Setters>
                        <Setter Target="Rotate.Angle"
                                Value="0" />
                        <Setter Target="Items.ItemTemplate"
                                Value="{StaticResource TopRightTemplate}" />
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="Right">
                    <VisualState.Setters>
                        <Setter Target="Rotate.Angle"
                                Value="90" />
                        <Setter Target="Items.ItemTemplate"
                                Value="{StaticResource TopRightTemplate}" />
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="Bottom">
                    <VisualState.Setters>
                        <Setter Target="Rotate.Angle"
                                Value="0" />
                        <Setter Target="Items.ItemTemplate"
                                Value="{StaticResource LeftBottomTemplate}" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <controls:LayoutTransformControl.Transform>
            <RotateTransform x:Name="Rotate" />
        </controls:LayoutTransformControl.Transform>

        <ItemsRepeater x:Name="Items"
                       Margin="0,4,0,4"
                       ItemsSource="{x:Bind Documents}">
            <ItemsRepeater.Layout>
                <StackLayout Orientation="Horizontal"
                             Spacing="16" />
            </ItemsRepeater.Layout>
        </ItemsRepeater>
    </controls:LayoutTransformControl>
</UserControl>
