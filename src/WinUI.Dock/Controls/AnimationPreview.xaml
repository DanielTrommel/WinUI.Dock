<UserControl x:Class="WinUI.Dock.Controls.AnimationPreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             IsHitTestVisible="False">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="PreviewBorderStyle"
                   TargetType="Border">
                <Setter Property="Background" Value="{ThemeResource AccentAcrylicBackgroundFillColorBaseBrush}" />
                <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
                <Setter Property="BorderThickness" Value="4" />
                <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
                <Setter Property="Opacity" Value="0.4" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Border x:Name="P1"
                Style="{StaticResource PreviewBorderStyle}" />
        <Border x:Name="P2"
                Style="{StaticResource PreviewBorderStyle}" />
    </Grid>
</UserControl>
