<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dock="using:Dock"
                    xmlns:converters="using:Dock.Converters">

    <converters:SideToOrientationConverter x:Key="SideToOrientationConverter" />

    <Style TargetType="dock:LayoutSide">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="dock:LayoutSide">
                    <ItemsRepeater ItemsSource="{Binding Children, RelativeSource={RelativeSource TemplatedParent}, Mode=OneTime}">
                        <ItemsRepeater.Layout>
                            <StackLayout Orientation="{Binding Side, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource SideToOrientationConverter}}"
                                         Spacing="{StaticResource RatingControlItemSpacing}" />
                        </ItemsRepeater.Layout>

                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Title}" />
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
