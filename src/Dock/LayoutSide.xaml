<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
                    xmlns:dock="using:Dock"
                    xmlns:converters="using:Dock.Converters">

    <converters:SideToAngleConverter x:Key="SideToAngleConverter" />

    <Style TargetType="dock:LayoutSide">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="dock:LayoutSide">
                    <controls:LayoutTransformControl>
                        <controls:LayoutTransformControl.Transform>
                            <RotateTransform Angle="{Binding Side, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource SideToAngleConverter}}" />
                        </controls:LayoutTransformControl.Transform>

                        <ItemsRepeater ItemsSource="{Binding Children, RelativeSource={RelativeSource TemplatedParent}, Mode=OneTime}">
                            <ItemsRepeater.Layout>
                                <StackLayout Orientation="Horizontal"
                                             Spacing="{StaticResource RatingControlItemSpacing}" />
                            </ItemsRepeater.Layout>

                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding Title}" />
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </controls:LayoutTransformControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
