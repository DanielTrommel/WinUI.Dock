<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dock="using:Dock"
                    xmlns:converters="using:Dock.Converters">

    <converters:SideToOrientationConverter x:Key="SideToOrientationConverter" />

    <Style TargetType="dock:LayoutSide">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="dock:LayoutSide">
                    <ItemsControl x:Name="PART_Children">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsStackPanel Orientation="{Binding Side, Converter={StaticResource SideToOrientationConverter}}" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
