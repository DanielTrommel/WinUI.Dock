<UserControl x:Class="Dock.Components.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:CommunityToolkit.WinUI.Controls"
             xmlns:dock="using:Dock"
             xmlns:converters="using:Dock.Converters"
             mc:Ignorable="d"
             x:Name="Main">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Card.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <ContentControl x:Key="Data"
                            DataContext="{Binding ElementName=Main}" />

            <converters:OrientationToAngleConverter x:Key="OrientationToAngleConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <ItemsRepeater ItemsSource="{x:Bind Containers}">
        <ItemsRepeater.Layout>
            <StackLayout Orientation="{x:Bind Orientation}"
                         Spacing="{StaticResource RatingControlItemSpacing}" />
        </ItemsRepeater.Layout>

        <ItemsRepeater.ItemTemplate>
            <DataTemplate x:DataType="dock:DocumentContainer">
                <ItemsRepeater ItemsSource="{Binding Children}">
                    <ItemsRepeater.Layout>
                        <StackLayout Orientation="{Binding DataContext.Orientation, Source={StaticResource Data}}"
                                     Spacing="{StaticResource RatingControlItemSpacing}" />
                    </ItemsRepeater.Layout>

                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="dock:Document">
                            <Grid>
                                <controls:LayoutTransformControl>
                                    <controls:LayoutTransformControl.Transform>
                                        <RotateTransform Angle="{Binding DataContext.Orientation, Source={StaticResource Data}, Converter={StaticResource OrientationToAngleConverter}}" />
                                    </controls:LayoutTransformControl.Transform>

                                    <ToggleButton x:Name="DocumentButton"
                                                  Margin="0,4,0,4"
                                                  Content="{Binding Title}" />
                                </controls:LayoutTransformControl>
                            </Grid>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </DataTemplate>
        </ItemsRepeater.ItemTemplate>
    </ItemsRepeater>
</UserControl>
