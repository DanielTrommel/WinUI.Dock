<UserControl x:Class="Dock.Components.DockTarget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:toolkit="using:CommunityToolkit.WinUI"
             mc:Ignorable="d"
             Width="32"
             Height="32"
             Opacity="0.4"
             Margin="2"
             Background="Transparent"
             AllowDrop="True">
    <UserControl.Resources>
        <ResourceDictionary Source="Card.xaml" />
    </UserControl.Resources>

    <Border x:Name="Main"
            Style="{StaticResource Card}"
            Padding="4">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <toolkit:IsEqualStateTrigger Value="{x:Bind Target}"
                                                     To="Center" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Main.Child">
                            <Setter.Value>
                                <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                                        BorderThickness="1,3,1,1" />
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <toolkit:IsEqualStateTrigger Value="{x:Bind Target}"
                                                     To="SplitLeft" />
                        <toolkit:IsEqualStateTrigger Value="{x:Bind Target}"
                                                     To="SplitRight" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Main.Child">
                            <Setter.Value>
                                <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                                        BorderThickness="1,3,1,1">
                                    <Path HorizontalAlignment="Center"
                                          Stroke="{ThemeResource AccentFillColorDefaultBrush}"
                                          StrokeDashArray="2,1"
                                          Stretch="Fill"
                                          Data="m 0,0 l 0,1" />
                                </Border>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <toolkit:IsEqualStateTrigger Value="{x:Bind Target}"
                                                     To="SplitTop" />
                        <toolkit:IsEqualStateTrigger Value="{x:Bind Target}"
                                                     To="SplitBottom" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Main.Child">
                            <Setter.Value>
                                <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                                        BorderThickness="1,3,1,1">
                                    <Path VerticalAlignment="Center"
                                          Stroke="{ThemeResource AccentFillColorDefaultBrush}"
                                          StrokeDashArray="2,1"
                                          Stretch="Fill"
                                          Data="m 0,0 l 1,0" />
                                </Border>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <toolkit:IsEqualStateTrigger Value="{x:Bind Target}"
                                                     To="DockLeft" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Main.Child">
                            <Setter.Value>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0"
                                            Background="{ThemeResource ControlFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                                            BorderThickness="1,3,1,1" />

                                    <FontIcon Grid.Column="1"
                                              FontSize="10"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Center"
                                              Glyph="&#xF08D;" />
                                </Grid>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <toolkit:IsEqualStateTrigger Value="{x:Bind Target}"
                                                     To="DockTop" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Main.Child">
                            <Setter.Value>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0"
                                            Background="{ThemeResource ControlFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                                            BorderThickness="1,3,1,1" />

                                    <FontIcon Grid.Row="1"
                                              FontSize="10"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Bottom"
                                              Glyph="&#xF090;" />
                                </Grid>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <toolkit:IsEqualStateTrigger Value="{x:Bind Target}"
                                                     To="DockRight" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Main.Child">
                            <Setter.Value>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>
                                    <FontIcon Grid.Column="0"
                                              FontSize="10"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Center"
                                              Glyph="&#xF08F;" />

                                    <Border Grid.Column="1"
                                            Background="{ThemeResource ControlFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                                            BorderThickness="1,3,1,1" />
                                </Grid>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <toolkit:IsEqualStateTrigger Value="{x:Bind Target}"
                                                     To="DockBottom" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Main.Child">
                            <Setter.Value>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                    </Grid.RowDefinitions>
                                    <FontIcon Grid.Row="0"
                                              FontSize="10"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Bottom"
                                              Glyph="&#xF08E;" />

                                    <Border Grid.Row="1"
                                            Background="{ThemeResource ControlFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                                            BorderThickness="1,3,1,1" />
                                </Grid>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Border>
</UserControl>
